<h1>Articles listing page</h1>
<!--<h1><%#= render @articles %></h1>-->

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to 'Create new article', new_article_path %></h2>

<p><%= link_to 'Go to home page', root_path %></p>




































