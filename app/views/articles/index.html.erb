<h1>Articles</h1>

<div id="articles">

    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>author</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.author %></td>
        <td><%= link_to "Show", article %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
        <td><%= link_to "Destory", article, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
        <br>
      </tr>
      <% end %>
      </tbody>
    </table>
</div>

<%= link_to "New article", new_article_path %>
